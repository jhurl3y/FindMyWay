<RelativeLayout android:id="@+id/RelativeLayoutJoystick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <TextView android:id="@+id/connection_stat"
        android:text="Not Connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        style="?android:attr/textAppearanceMedium"
        />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingRight="10dp"-->
        <!--android:paddingTop="5dp"-->
        <!--android:layout_below="@id/connection_stat"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:id="@+id/angleTextView" />-->

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingRight="10dp"-->
        <!--android:paddingTop="5dp"-->
        <!--android:paddingBottom="5dp"-->
        <!--android:layout_below="@id/angleTextView"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:id="@+id/powerTextView" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/connection_stat"
        android:id="@+id/directionTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/directionTextView"
        android:id="@+id/speedTextView" />

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="40dp"
        android:paddingBottom="80dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="80dp"
        android:paddingRight="20dp"
        android:layout_toLeftOf="@id/mySwitch"
        android:text="Manual"
        style="?android:attr/textAppearanceMedium"/>



    <android.widget.SeekBar android:id="@+id/slider"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:layout_alignParentRight="true"
        android:paddingTop="20dp"
        android:layout_centerVertical="true"
        style="?android:attr/textAppearanceMedium"
        />

    <!--<android.widget.SeekBar android:id="@+id/slider"-->
